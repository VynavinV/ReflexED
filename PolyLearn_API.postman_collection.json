{
  "info": {
    "name": "PolyLearn API",
    "description": "AI Translation Coach Platform API - Complete collection for testing all endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"username\": \"student1\",\n  \"password\": \"SecurePass123\",\n  \"first_name\": \"John\",\n  \"last_name\": \"Doe\",\n  \"role\": \"student\",\n  \"native_language\": \"en\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"access_token\", jsonData.access_token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"student@example.com\",\n  \"password\": \"SecurePass123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Jane\",\n  \"learning_languages\": [\"es\", \"fr\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/me",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Translation",
      "item": [
        {
          "name": "Analyze Translation",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"session_id\", jsonData.session_id);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"source_text\": \"I went to the store yesterday\",\n  \"source_language\": \"en\",\n  \"target_language\": \"es\",\n  \"difficulty\": \"intermediate\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/translation/analyze",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "analyze"]
            }
          }
        },
        {
          "name": "Submit Translation",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"},
              {"key": "Content-Type", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"session_id\": \"{{session_id}}\",\n  \"user_translation\": \"Fui a la tienda ayer\",\n  \"time_spent_seconds\": 120,\n  \"hints_requested\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/translation/submit",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "submit"]
            }
          }
        },
        {
          "name": "Get Hints",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/translation/hints/{{session_id}}?level=2",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "hints", "{{session_id}}"],
              "query": [{"key": "level", "value": "2"}]
            }
          }
        },
        {
          "name": "Get Practice Sentence",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/translation/practice?target_language=es&difficulty=intermediate",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "practice"],
              "query": [
                {"key": "target_language", "value": "es"},
                {"key": "difficulty", "value": "intermediate"}
              ]
            }
          }
        },
        {
          "name": "Get Progress",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/translation/progress",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "progress"]
            }
          }
        },
        {
          "name": "Get Translation History",
          "request": {
            "method": "GET",
            "header": [
              {"key": "Authorization", "value": "Bearer {{access_token}}"}
            ],
            "url": {
              "raw": "{{base_url}}/api/translation/history?limit=10",
              "host": ["{{base_url}}"],
              "path": ["api", "translation", "history"],
              "query": [{"key": "limit", "value": "10"}]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
