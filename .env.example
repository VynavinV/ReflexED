# Flask Environment Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Secret Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# Database
# Development (SQLite)
DATABASE_URL=sqlite:///polylearn.db

# Production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/polylearn

# Google Gemini API
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here

# ElevenLabs API (Optional - for audio features)
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# Redis (for rate limiting in production)
# REDIS_URL=redis://localhost:6379/0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000,http://127.0.0.1:5000

# Logging
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=5000
